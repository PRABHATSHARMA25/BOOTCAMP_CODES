package gen;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

class Book{
	private String title;
	private double price;
	
	Book(){};
	Book(String s,double d){
		this.title=s;
		this.price=d;
	}
	
	public String getTitle() {
		return title;
	}



	public void setTitle(String title) {
		this.title = title;
	}



	public double getPrice() {
		return price;
	}



	public void setPrice(double price) {
		this.price = price;
	}
	

@Override
	public String toString() {
		return "Book [title=" + title + ", price=" + price + "]";
	}


}


public class ObjectListEx {
	
	List<Book>bookList=new ArrayList<>();
	public void addBook(Book book) {
		bookList.add(book);
		System.out.println("Book Added");
		}
	public void showAllBooks() {
		Iterator<Book> it=bookList.iterator();
		System.out.println("Details of books");
		while(it.hasNext()) {
			Book temp=it.next();
			System.out.println(temp);
		}
	}
	 public void deleteBook(String title) {
	        boolean deleted=false;
	        Iterator<Book> it=bookList.iterator();
	        while(it.hasNext()) {
	        	Book book=it.next();
	        	if(book.getTitle().equalsIgnoreCase(title)) {
	        		it.remove();
	        		deleted=true;
	        	}
	        }
	        if(deleted) {
	        	System.out.println("Book Deleted");
	        }else {
	        	System.out.println("Book not found");
	        }
	        
	    }

	    public void editBook(String title, double price) {
	        boolean edited=false;
	    	Iterator<Book> bk=bookList.iterator();
	    	while(bk.hasNext()) {
	        Book book=bk.next();
	        if(book.getTitle().equalsIgnoreCase(title)) {
	        	book.setPrice(price);
	        	edited=true;
	        }
	    	}
	    	if(edited)
	    		System.out.println("Book edited");
	    	else
	    		System.out.println("Book not found");
	        
	    }

	    public void searchBook(String title) {
	    	boolean searched=false;
	    	 Iterator<Book>it=bookList.iterator();
	         while(it.hasNext()) {
	             Book book=it.next();
	             if(book.getTitle().equalsIgnoreCase(title)) {
	                 searched=true;
	             }
	         }
	         if(searched)
	             System.out.println("Book Found Successful");
	         else
	             System.out.println("Book not found");
	    	
	        
	    }

	
	public static void main(String[] args) {
		
		ObjectListEx ex=new ObjectListEx();
		Book[] books=new Book[3];
		books[0]=new Book("Physics",1000.0);
		books[1]=new Book("Zology",1200.0);
		books[2]=new Book("Chemistry",1500.0);
		
		for(Book book:books)
			ex.addBook(book);
			
			//ex.deleteBook("Chemistry");
			
			
		//	ex.searchBook("Zology");
			ex.editBook("Physics",2000.0);
			ex.showAllBooks();
		
		
	}

}
